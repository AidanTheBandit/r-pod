# Backend Server Configuration

# Server Settings
PORT=3001
NODE_ENV=production
SERVER_PASSWORD=your-secure-password-here

# Spotify Configuration
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:3001/callback/spotify

# Apple Music Configuration
APPLE_MUSIC_TEAM_ID=your-team-id
APPLE_MUSIC_KEY_ID=your-key-id
APPLE_MUSIC_PRIVATE_KEY_PATH=./keys/AuthKey_XXXXX.p8

# YouTube Music Configuration
# Option 1: OAuth (Recommended for production)
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:3001/callback/youtube

# Option 2: Cookie-based authentication (for development/testing)
# Get cookie from browser dev tools: Application → Cookies → music.youtube.com
YOUTUBE_MUSIC_COOKIE=your-full-cookie-string-here

# Jellyfin Configuration (Optional)
JELLYFIN_SERVER_URL=https://your-jellyfin-server.com
JELLYFIN_API_KEY=your-api-key-here

# Navidrome Configuration (Optional)
NAVIDROME_SERVER_URL=https://your-navidrome-server.com
NAVIDROME_USERNAME=your-username
NAVIDROME_PASSWORD=your-password

# Subsonic Configuration (Optional)
SUBSONIC_SERVER_URL=https://your-subsonic-server.com
SUBSONIC_USERNAME=your-username
SUBSONIC_PASSWORD=your-password

# Security
JWT_SECRET=your-random-jwt-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key

# Cache Settings (in seconds)
CACHE_TTL=3600

# CORS Settings
CORS_ORIGIN=http://localhost:3000
