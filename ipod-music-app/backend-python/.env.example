# Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
SERVER_PASSWORD=change-me-in-production
SECRET_KEY=your-secret-key-here-change-in-production
HOST=0.0.0.0
PORT=3001
DEBUG=false

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Cache Settings
CACHE_TTL=600

# YouTube Music Configuration
# Get your cookie from YouTube Music:
# 1. Open YouTube Music in your browser
# 2. Open Developer Tools (F12)
# 3. Go to Application/Storage > Cookies
# 4. Copy the entire Cookie string
# 
# For brand accounts, get the brand account ID from:
# https://myaccount.google.com/brandaccounts
# Look for the 21-digit number in the URL
YOUTUBE_MUSIC_COOKIE=
YOUTUBE_MUSIC_PROFILE=1
YOUTUBE_MUSIC_BRAND_ACCOUNT_ID=

# Spotify Configuration (Optional)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=http://localhost:3001/callback/spotify

# Session Management
SESSION_TIMEOUT=3600
SESSION_CLEANUP_INTERVAL=300
